extends layout

block content
  h2 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Genre:
      input#name.form-control(type='text' placeholder='Fiction, Horror, Poetry etc.' name='name' value=(undefined===genre ? '': genre.name))
    button.btn-primary(type='submit') Create/Update

    if errors
      ul
      for error in errors
        li!=error.msg
